<Window x:Class="TaxiApp.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:cmd="http://www.galasoft.ch/mvvmlight"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800">


    <Grid>
        <esri:MapView x:Name="MyMapView" 
                      Map="{Binding MyMap}" 
                      
                      GraphicsOverlays="{Binding GraphicsOverlays}"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="GeoViewTapped">
                    <cmd:EventToCommand Command="{Binding gvtapped}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </esri:MapView>
        <Border Background="LightBlue"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Width="300" Height="60"
                Margin="0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                        x:Name="StartNavigationButton"
                        Grid.Column="0"
                      Margin="-241,139,141,-128"
                    Background="red"
                       Height="20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Command="{Binding StartNavigationCommand}"
                        Content="Navigate route"
                        IsEnabled="False" Grid.Row="1" />
                <Button
                        x:Name="RecenterButton"
                        Margin="118,139,-214,-128"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                       Command="{Binding RecenterCommand}"
                        Content="Recenter"
                        IsEnabled="False" Grid.Row="1" Height="20" Grid.ColumnSpan="2" />
                <TextBlock Text="Search for an address"
                           Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           TextAlignment="Center" VerticalAlignment="Center"
                           FontWeight="SemiBold" />
                <TextBox x:Name="AddressTextBox"
                         Grid.Row="1" Grid.Column="0"
                         Margin="5"
                         Text=""/>
                <Button x:Name="SearchAddressButton"
                        Grid.Row="1" Grid.Column="1"
                        Margin="5"
                        Content="Search"
                       Command="{Binding SearchAdressCommand}" />
                <TextBlock
                    Margin="-221,209,191,-308"
                    x:Name="MessagesTextBlock"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    TextWrapping="Wrap" />
            </Grid>
        </Border>
    </Grid>
</Window>

